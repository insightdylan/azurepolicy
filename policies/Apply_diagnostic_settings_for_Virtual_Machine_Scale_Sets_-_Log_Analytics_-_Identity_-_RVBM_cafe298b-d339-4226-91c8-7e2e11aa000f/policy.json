{
 "properties": {
  "displayName": "Apply diagnostic settings for Virtual Machine Scale Sets - Log Analytics - Identity - RVBM",
  "policyType": "Custom",
  "mode": "All",
  "description": "This policy automatically deploys and enable diagnostic settings to Log Analytics",
  "metadata": {
   "category": "Monitoring",
   "createdBy": "e2c5fc93-1ff5-4360-9ec4-9aae23f840e3",
   "createdOn": "2022-05-19T14:40:43.6218873Z",
   "updatedBy": "e2c5fc93-1ff5-4360-9ec4-9aae23f840e3",
   "updatedOn": "2022-05-19T15:53:15.4519341Z"
  },
  "parameters": {
   "logAnalytics": {
    "type": "String",
    "metadata": {
     "displayName": "Log Analytics workspace",
     "description": "Select the Log Analytics workspace from dropdown list",
     "strongType": "omsWorkspace"
    }
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.Compute/virtualMachineScaleSets"
     }
    ]
   },
   "then": {
    "effect": "deployIfNotExists",
    "details": {
     "type": "Microsoft.Insights/diagnosticSettings",
     "name": "AtosDiagnosticRule-SendToLogAnalytics",
     "roleDefinitionIds": [
      "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
     ],
     "existenceCondition": {
      "allOf": [
       {
        "field": "Microsoft.Insights/diagnosticSettings/logs.enabled",
        "equals": "True"
       },
       {
        "field": "Microsoft.Insights/diagnosticSettings/workspaceId",
        "matchInsensitively": "[parameters('logAnalytics')]"
       }
      ]
     },
     "deployment": {
      "properties": {
       "mode": "incremental",
       "template": {
        "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
        "contentVersion": "1.0.0.0",
        "parameters": {
         "resourceName": {
          "type": "string"
         },
         "logAnalytics": {
          "type": "string"
         }
        },
        "variables": {},
        "resources": [
         {
          "type": "Microsoft.Compute/virtualMachineScaleSets/providers/diagnosticSettings",
          "apiVersion": "2017-05-01-preview",
          "name": "[concat(parameters('resourceName'), '/', 'Microsoft.Insights/AtosDiagnosticRule-SendToLogAnalytics')]",
          "location": "eastus2",
          "dependsOn": [],
          "properties": {
           "workspaceId": "[parameters('logAnalytics')]",
           "metrics": [
            {
             "category": "AllMetrics",
             "enabled": true,
             "retentionPolicy": {
              "enabled": false,
              "days": 0
             }
            }
           ],
           "logs": []
          }
         }
        ],
        "outputs": {}
       },
       "parameters": {
        "logAnalytics": {
         "value": "[parameters('logAnalytics')]"
        },
        "resourceName": {
         "value": "[field('name')]"
        }
       }
      }
     }
    }
   }
  }
 },
 "id": "/subscriptions/5c10a8b5-bbb5-4ed0-953e-17b355d11872/providers/Microsoft.Authorization/policyDefinitions/cafe298b-d339-4226-91c8-7e2e11aa000f",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "cafe298b-d339-4226-91c8-7e2e11aa000f"
}